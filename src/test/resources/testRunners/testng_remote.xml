<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="phoenix automation suite" thread-count="5" parallel="tests">

	<test thread-count="5" name="winedgeTest" parallel="methods">
		<parameter name="os" value="windows"></parameter>
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.selenium.pom.tests.FDTest" />
			<class name="com.selenium.pom.tests.SUPTest" />
		</classes>
	</test>

	<test thread-count="5" name="macedgeTest" parallel="methods">
		<parameter name="os" value="windows"></parameter>
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.selenium.pom.tests.FDTest" />
			<class name="com.selenium.pom.tests.SUPTest" />
		</classes>
	</test>

	<test thread-count="5" name="winchromeTest" parallel="methods">
		<parameter name="os" value="mac"></parameter>
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.selenium.pom.tests.FDTest" />
			<class name="com.selenium.pom.tests.SUPTest" />
		</classes>
	</test>

	<test thread-count="5" name="macchromeTest" parallel="methods">
		<parameter name="os" value="mac"></parameter>
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.selenium.pom.tests.FDTest" />
			<class name="com.selenium.pom.tests.SUPTest" />
		</classes>
	</test>

</suite> 
